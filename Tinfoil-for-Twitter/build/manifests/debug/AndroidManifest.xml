--><!-- From: file:/C:/Users/Owner/Dropbox/Code/Tinfoil-Twitter/Tinfoil-for-Twitter/src/main/AndroidManifest.xml --><manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="20140104" android:versionName="1.3" package="com.mill_e.twitterwrapper">
    <!-- versionCode and versionName will be populated by build.gradle -->

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" android:required="false"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" android:required="false"/>
    <uses-permission android:name="android.permission.INTERNET" android:required="true"/>

    <application android:allowBackup="true" android:hardwareAccelerated="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:largeHeap="true" android:theme="@style/Theme.Tinfoil">

        <activity android:configChanges="keyboardHidden|orientation|screenSize" android:label="@string/app_name" android:launchMode="standard" android:name="com.mill_e.twitterwrapper.TwitterWrapper" android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:host="m.twitter.com" android:scheme="http"/>
                <data android:host="m.twitter.com" android:scheme="https"/>
                <data android:host="twitter.com" android:scheme="http"/>
                <data android:host="twitter.com" android:scheme="https"/>
                <data android:host="www.twitter.com" android:scheme="http"/>
                <data android:host="www.twitter.com" android:scheme="https"/>
                <data android:host="apps.twitter.com" android:scheme="http"/>
                <data android:host="apps.twitter.com" android:scheme="https"/>
            </intent-filter>

        </activity>

        <activity android:label="@string/app_name" android:name="com.mill_e.twitterwrapper.preferences.TwitterPreferences" android:parentActivityName="com.mill_e.twitterwrapper.TwitterWrapper" android:theme="@style/Theme.Tinfoil.Preferences">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.mill_e.twitterwrapper.TwitterWrapper"/>
        </activity>

    </application>

</manifest>
